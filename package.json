{
    "name": "all-error-handler",
    "version": "1.2.2",
    "description": "handle all uncaught errors",
    "main": "index.min.js",
    "types": "index.d.ts",
    "scripts": {
        "test": "npx jasmine-node ./tests",
        "build": "npx uglify-es index.js --compress --mangle --output index.min.js",
        "generateDefs": "npx jsdoc -t node_modules/tsd-jsdoc/dist -r index.js -d . && mv ./types.d.ts index.d.ts",
        "prepublish": "npm run test && npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jkanchelov/all-error-handler.git"
    },
    "keywords": [
        "all",
        "error",
        "handler",
        "handle",
        "catch",
        "uncaught",
        "errors",
        "exceptions"
    ],
    "author": "jkanchelov",
    "license": "MIT",
    "homepage": "https://github.com/jkanchelov/all-error-handler#readme",
    "devDependencies": {
        "jasmine-node": "^1.14.5",
        "jsdoc": "^3.5.5",
        "uglify-es": "^3.3.9"
    }
}
